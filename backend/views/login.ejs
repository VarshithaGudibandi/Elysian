<!DOCTYPE html>
<html>
    <%- include('layouts/head') %>
    <body style="background-color: #282828;">
    <%- include('layouts/header') %>
        
        <!-- Sign up form -->
        <div class="container">
            <div class="row text-center" style="padding-top: 0px;">
                <div class="col-xs-4 col-xs-offset-4">
                        <div>
                            <h1 class="text-left signup_heading"> Login </h1>
                            <br>
                        </div>

                    <%- include ('partials/messages.ejs') %>
                    <form action="/auth" method="POST" class="form-style-8">
                        <div class="form-group">
                            <input 
                                class="form-control label_type" 
                                type="email" 
                                id="email"
                                placeholder="E-mail" 
                                name="email"
                            />
                        </div>
                        <div class="form-group">
                            <input 
                                class="form-control" 
                                type="password" 
                                id="password"
                                placeholder="Password" 
                                name="password">
                        </div>
                        <div class='form-group'>
                            <button class="btn btn-primary text-left" style="float: left; color: #282828; background-color: #ecbbaa; border: none;">Login</button><br><br>
                        </div>
                        <div class='form-group'>
                            <label class="label text-left" style="float: left;"> Don't have an account?<b><a href='/signup' style='color: #ecbbaa; text-decoration: none; font-size: 12px;'> Sign Up.</a><b/></label>
                        </div>
                    </form> 
                </div>
            </div>
        </div>
        </div><br>
        <br><br><br><br>
        
        <%- include('layouts/footer') %>
        <%- include('layouts/responsive') %>
        
    </body>
</html>
